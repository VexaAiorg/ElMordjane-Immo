# Production Environment Variables
# Copy this file to .env.production and fill in your actual values
# NEVER commit .env.production to Git!

# Database Configuration
POSTGRES_USER=sauzxa
POSTGRES_PASSWORD=CHANGE_THIS_TO_SECURE_PASSWORD
POSTGRES_DB=ElMordjanDb

# Backend Configuration
NODE_ENV=production
PORT=3000

# Generate a secure JWT secret with: openssl rand -hex 64
JWT_SECRET=CHANGE_THIS_TO_LONG_RANDOM_STRING

# Admin Credentials
ADMIN_EMAIL=admin@yourdomain.com
ADMIN_PASSWORD=CHANGE_THIS_TO_SECURE_PASSWORD

# Domain Configuration (used by Nginx)
DOMAIN=yourdomain.com
